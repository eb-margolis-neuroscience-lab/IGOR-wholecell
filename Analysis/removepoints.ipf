#pragma rtGlobals=1		// Use modern global access method.#include <Strings as Lists>function removepoints()	variable i=0	killwaves /z gaba	killwaves /z gaba_t	duplicate /o ampl2 gaba	duplicate /o sweep_t gaba_t	display gaba vs gaba_t	showinfo	button startremove, pos={10,10}, proc=remptsbutton, title="go"endfunction gorempts()	variable i=0	variable refpt=0	wavestats gaba	//i=V_maxloc+1	//count number of sweeps	//user selects startpoint	refpt=xcsr(A)	i=refpt+1	do		deletepoints i,2,gaba, gaba_t		i=i+1	while (i<V_npnts)		i=refpt-2		print refpt, i	do		deletepoints i,2, gaba,gaba_t		i=i-3	while (i>0)endFunction remptsbutton(ctrlName) : ButtonControl	string ctrlName	gorempts()end